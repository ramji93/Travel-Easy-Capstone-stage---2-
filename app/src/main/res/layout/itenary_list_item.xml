<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:elevation="5dp"
    android:background="@drawable/white_selectable_item_background_circle"
    >

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_marginTop="20dp"
    android:layout_marginStart="30dp"

    android:layout_alignParentStart="true"
    android:id="@+id/origin"
    android:textStyle="bold"
    android:textAppearance="@android:style/TextAppearance.Medium"

    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/departure"
        android:layout_below="@id/origin"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:paddingTop="5dp"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:src="@drawable/arrow"
        android:paddingStart="20dp"
        android:id="@+id/arrow"
        android:layout_centerHorizontal="true"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:id="@+id/destination"
        android:textStyle="bold"
        android:textAppearance="@android:style/TextAppearance.Medium"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrival"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/destination"
        android:layout_alignParentEnd="true"
        android:paddingTop="5dp"
        />


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:orientation="horizontal"
    android:paddingTop="25dp"
    android:layout_below="@+id/departure"

    >

    <ImageView
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/carrier_logo"

         />
    <ImageView
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/carrier_logo_2"
        android:visibility="invisible"
        android:layout_marginStart="5dp"
        />
    <ImageView
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/carrier_logo_3"
        android:visibility="invisible"
        android:layout_marginStart="5dp"
         />

</LinearLayout>


     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/arrow"
         android:layout_centerHorizontal="true"
         android:paddingTop="20dp"
         android:textSize="16sp"
         android:id="@+id/duration"
         android:textStyle="bold"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/arrival"
        android:paddingTop="25dp"
        android:textSize="16sp"
        android:layout_marginEnd="20dp"
        android:id="@+id/stops"
        android:layout_alignParentEnd="true" />

</RelativeLayout>