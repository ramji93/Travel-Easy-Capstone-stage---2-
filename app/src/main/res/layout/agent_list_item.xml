<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="110dp"
    android:elevation="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"

    android:background="@drawable/white_selectable_item_background_circle"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <ImageView
            android:layout_marginStart="20dp"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:id="@+id/agent_image"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:id="@+id/agent_name"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/Price"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        >
<Button
    android:layout_width="100dp"
    android:layout_marginStart="50dp"
    android:layout_height="30dp"
    android:textSize="15sp"
    android:textStyle="bold"
    android:text="BOOK NOW"
    android:id="@+id/book_button"
    android:background="@drawable/booknow_background"
    android:contentDescription="book now"
    />

 <ImageButton
     android:layout_width="50dp"
     android:layout_height="30dp"
     android:layout_marginStart="145dp"
     android:src="@android:drawable/ic_menu_share"
     android:id="@+id/share_button"
     android:background="@drawable/share_background"
     android:contentDescription="share"
     />

    </LinearLayout>

</LinearLayout>